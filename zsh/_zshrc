ZSH=$HOME/.oh-my-zsh
ZSH_THEME="simple"
plugins=(git git-extras git-flow git-hubflow git-remote-branch python)

source $ZSH/oh-my-zsh.sh

# User configuration

alias v='vim'
alias nv='nvim'

alias mt='make test'
alias mtv='make test verbosity=2'
alias pm='python manage.py'
alias pms='pm shell'
alias pmrs='pm runserver'
alias pmrsp='pm runserver_plus'
alias pmsdb='pm syncdb'
alias pmm='pm migrate'
alias pmmm='pm makemigrations'
alias pmml='pm migrate --list'
alias pmsm='pm schemamigration'
alias pmsu='pm createsuperuser'

alias mkv='mkvirtualenv'

alias py='python'
alias py3='python3.4'


export PATH=$HOME/bin:/usr/local/bin:$PATH
# export MANPATH="/usr/local/man:$MANPATH"

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='mvim'
fi

export WORKON_HOME=$HOME/.envs
export PROJECT_HOME=$HOME/code
export VIRTUALENVWRAPPER_SCRIPT=/usr/local/bin/virtualenvwrapper.sh
source /usr/local/bin/virtualenvwrapper_lazy.sh

# amazon
export AWS_ACCESS_KEY_ID=''
export AWS_SECRET_ACCESS_KEY=''

# google
export GOOGLE_OAUTH2_CLIENT_ID=''
export GOOGLE_OAUTH2_CLIENT_SECRET=''

# Set colors to match iTerm2 Terminal Colors
export TERM=xterm-256color

#django
export DEBUG=True
export STATIC_URL='/static/'
export DEFAULT_FILE_STORAGE='django.contrib.staticfiles.storage.StaticFilesStorage'
export STATICFILES_STORAGE='django.contrib.staticfiles.storage.StaticFilesStorage'

# geodjango
# GDAL_LIBRARY_PATH="/Applications/Postgres.app/Contents/MacOS/lib/libgdal.dylib"
# GEOS_LIBRARY_PATH="/Applications/Postgres.app/Contents/MacOS/lib/libgeos_c.dylib"
# GDAL_DATA="/Applications/Postgres.app/Contents/MacOS/share/gdal"

# Compilation flags
export CPPFLAGS=-Qunused-arguments
export CFLAGS=-Qunused-arguments

# Golang
export GOBIN=$HOME/code/go/go/bin
export GOPATH=$HOME/code/go

PATH=$PATH:$GOBIN
export PATH="$HOME/.rbenv/bin:$PATH"

[ -s "/Users/k/.scm_breeze/scm_breeze.sh" ] && source "/Users/k/.scm_breeze/scm_breeze.sh"
eval "$(rbenv init -)"
